<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/sunday_2"  >

    <AutoCompleteTextView 
        android:id="@+id/hutang_insert_edittext_nama"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="20dip"
        android:background="@drawable/edittext_custom"
        android:hint="masukkan nama hutang"
        android:singleLine="true"
        android:textSize="18dip"
        android:inputType="text"/>
    
     <EditText 
        android:id="@+id/hutang_insert_edittext_nominal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="20dip"
        android:background="@drawable/edittext_custom"
        android:hint="masukkan jumlah hutang"
        android:singleLine="true"
        android:textSize="18dip"
        android:maxLength="9"
        android:inputType="number"/>
     
      
      <EditText 
	        android:id="@+id/hutang_insert_edittext_tanggal"
	        android:layout_width="200dip"
	        android:layout_height="wrap_content"        
	        android:layout_marginTop="20dip"	        
	        android:background="@drawable/edittext_custom"
	        android:focusable="false"
	        android:hint="masukkan tanggal DEADLINE"
	        android:singleLine="true"	        
	        android:textSize="18dip" />
    
      <Button 
          android:id="@+id/hutang_insert_submit_button"
          android:layout_width="80dip"
          android:layout_height="wrap_content"          
          android:layout_marginTop="20dip"
          android:text="submit"/>

</LinearLayout>