<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/sunday_2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/hutang_cicilan_nama_hutang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dp"                             
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="20dip" />
    
    <AutoCompleteTextView
        android:id="@+id/hutang_cicilan_insert_edittext_nama"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@drawable/edittext_custom"
        android:hint="masukkan nama cicilan"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="18dip" />

    <EditText
        android:id="@+id/hutang_cicilan_insert_edittext_nominal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@drawable/edittext_custom"
        android:hint="masukkan jumlah cicilan"
        android:inputType="number"
        android:maxLength="9"
        android:singleLine="true"
        android:textSize="18dip" />

    <EditText
        android:id="@+id/hutang_cicilan_insert_edittext_tanggal"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@drawable/edittext_custom"
        android:focusable="false"
        android:hint="masukkan tanggal cicilan"
        android:singleLine="true"
        android:textSize="18dip" />

    <Button
        android:id="@+id/hutang_cicilan_insert_submit_button"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="submit" />

</LinearLayout>